<!DOCTYPE html>
 <html>
   <body>
      <h2>Editing Book</h2>
        <%= form_with model:@book, local: true do |f| %>
          <div>
            <%= f.label :Title %><br>
            <%= f.text_field :title %>
          </div>
          <div>
            <%= f.label :body %><br>
            <%= f.text_area :body %>
          </div>
          
            <div>
                <%= f.submit 'Update Book' %>
            </div>
        <% end %>
  
      <table>
        <tr>
            <td><%= link_to "Show", book_path, class:"link"%></td>
            <td><%= link_to "Back", books_path, class:"link" %></td>
        </tr>
    </table>
   </body>
</html>