<h2>Editing Book</h2>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
      <%= f.submit 'Update Book' %>
  </div>
<% end %> 

  <table>
    <tr>
        <td><%= link_to "Show", book_path %></td>
        <td><%= link_to "Back", books_path %></td>
    </tr>
</table>
