<!DOCTYPE html>
<html>

  <body>
    <div class="Title">
      <h1>Books</h1>
    </div>
     
    <table cellSpacing="10">
      <thead class="table-title">
       <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
       </tr>
      </thead>
  
      <tbody >
        <% @books.each do |book| %>
         <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
              <%= link_to "show", book_path(book), class:"link" %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(book), class:"link" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(book), method: :delete, class:"link" %>
            </td>
         </tr>
        <% end %>
      </tbody>
   </table>
  
     <div class="Title">
       <h2>New book</h2>
     </div>
      
      <%= form_with model:@book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <div>
          <%= f.submit 'Create Book'%>
        </div>
      <% end %>
  </body>
